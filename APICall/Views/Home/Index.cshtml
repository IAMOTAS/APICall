<style>
    /* Apply background color to the form */
    .translation-form {
        background-color: turquoise;
        padding: 20px; /* Add padding for better appearance */
        border-radius: 10px; /* Add rounded corners */
    }

    /* Adjust the height of the text input */
    #textInput {
        height: 40px; /* Set the desired height */
    }

    /* Apply styling to the translated text box */
    .translated-text-box {
        border: 1px solid #ccc; /* Add border */
        padding: 10px; /* Add padding */
        margin-top: 10px; /* Add margin for spacing */
        background-color: #f9f9f9; /* Light gray background */
        border-radius: 5px; /* Add rounded corners */
    }
</style>

<!-- Include jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<!-- Include DataTables CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">

<!-- Include DataTables JavaScript -->
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

<!-- HTML table to display data -->
<table id="dataTable" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Value</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Initialize DataTables -->
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            ajax: {
                url: '/Data/GetData', // Controller action URL
                type: 'GET',
                dataType: 'json',
                dataSrc: ''
            },
            columns: [
                { data: 'Id' },
                { data: 'Name' },
                { data: 'Value' }
                // Add more columns as needed
            ]
        });
    });
</script>

<!-- Translation form -->
<div class="translation-form">
    <h1>Text Translation Environment</h1>
    <form method="post" asp-action="TranslateToKlingon">
        <div class="form-group">
            <label for="textInput">Enter Text to Translate:</label>
            <input type="text" id="textInput" name="textToTranslate" class="form-control" required />
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Translate</button>
    </form>

    <!-- Translated text box -->
    @if (ViewBag.TranslatedText != null)
    {
        <div class="translated-text-box mt-4">
            <h2>Translated Text:</h2>
            <p>@ViewBag.TranslatedText</p>
        </div>
    }

    <!-- Error message box -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="mt-4">
            <h2>Error:</h2>
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }
</div>
